<div id="<%= dom_id appointment%>" class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-3">
      <img src="https://thispersondoesnotexist.com" class="img-fluid rounded-start" alt="random person">
    </div>
    <div class="col-md-9">
      <div class="card-body">
        <h5 class="card-title"><%= "#{appointment.firstname} #{appointment.lastname}" %></h5>
        <div class="d-flex gap-2">
          <%= link_to "Show this appointment", appointment, class: 'btn btn-primary' %>
          <%= link_to "Edit", edit_appointment_path(appointment), class: 'btn btn-success' %> 
          <%= button_to "delete", appointment, method: :delete, class: 'btn btn-danger', data:{confirm: 'Are you sure?'} %>
        </div>
        <p class="card-text"><small class="text-body-secondary">Created <%= appointment.created_at.strftime("%b %d, %Y")%></small></p>
      </div>
    </div>
  </div>
</div>
